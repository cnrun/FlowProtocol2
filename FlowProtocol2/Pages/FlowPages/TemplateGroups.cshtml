@page
@model FlowProtocol2.Pages.FlowPages.TemplateGroupsModel
@{
    ViewData["Title"] = "Gruppen";
}
<h2>Anwendergruppen</h2>
@if (Model.TemplatePathFound && Model.TList != null)
{
    <p>Wählen Sie die Gruppe der Vorlagen aus.</p>
    <div class="container">
        @for (int row = 0; row < Model.TList.Rows; row++)
        {
            @switch (Model.TList.Cols)
            {
                case 1:
                    <div class="row">
                        <div class="col-md-12">
                            <h5>
                                <a asp-page="./ListGroup"
                                    asp-route-userGroup="@Model.TList.Tabarray[row,0]">@Model.TList.Tabarray[row,0]</a>
                            </h5>
                        </div>
                    </div>
                    break;
                case 2:
                    <div class="row">
                        <div class="col-md-6">
                            <h5>
                                <a asp-page="./ListGroup"
                                    asp-route-userGroup="@Model.TList.Tabarray[row,0]">@Model.TList.Tabarray[row,0]</a>
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <h5>
                                <a asp-page="./ListGroup"
                                    asp-route-userGroup="@Model.TList.Tabarray[row,1]">@Model.TList.Tabarray[row,1]</a>
                            </h5>
                        </div>
                    </div>
                    break;
                default:
                    <div class="row">
                        <div class="col-md-4">
                            <h5>
                                <a asp-page="./ListGroup"
                                    asp-route-userGroup="@Model.TList.Tabarray[row,0]">@Model.TList.Tabarray[row,0]</a>
                            </h5>
                        </div>
                        <div class="col-md-4">
                            <h5>
                                <a asp-page="./ListGroup"
                                    asp-route-userGroup="@Model.TList.Tabarray[row,1]">@Model.TList.Tabarray[row,1]</a>
                            </h5>
                        </div>
                        <div class="col-md-4">
                            <h5>
                                <a asp-page="./ListGroup"
                                    asp-route-userGroup="@Model.TList.Tabarray[row,2]">@Model.TList.Tabarray[row,2]</a>
                            </h5>
                        </div>
                    </div>
                    break;
            }
        }
    </div>
}
else
{
    <p>Das Vorlagenverzeichnis @Model.TemplatePath wurde nicht gefunden. Bitte prüfen Sie die Einstellung TemplatePath in
        der Datei appsettings.json.</p>
}