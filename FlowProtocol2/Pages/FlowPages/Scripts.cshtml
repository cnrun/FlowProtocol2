@page
@model FlowProtocol2.Pages.FlowPages.ScriptsModel
@{
    ViewData["Title"] = "Skripte";
}
<h2>Skripte der Gruppe @Model.GroupName</h2>
@if (Model.ScriptGroupPathFound && Model.ScriptList != null)
{
    <p>Wählen Sie ein Skript aus</p>
    <div class="container">
        @for (int row = 0; row < Model.ScriptList.Rows; row++)
        {
            @switch (Model.ScriptList.Cols)
            {
                case 1:
                    <div class="row">
                        <div class="col-md-12">
                            <h5>
                                <a asp-page="./Run"
                                    asp-route-scripttag="@Model.ScriptList.Tabarray[row,0].Link">@Model.ScriptList.Tabarray[row,0].ShowText</a>
                            </h5>
                        </div>
                    </div>
                    break;
                case 2:
                    <div class="row">
                        <div class="col-md-6">
                            <h5>
                                <a asp-page="./Run"
                                    asp-route-scripttag="@Model.ScriptList.Tabarray[row,0].Link">@Model.ScriptList.Tabarray[row,0].ShowText</a>
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <h5>
                                <a asp-page="./Run"
                                    asp-route-scripttag="@Model.ScriptList.Tabarray[row,1].Link">@Model.ScriptList.Tabarray[row,1].ShowText</a>
                            </h5>
                        </div>
                    </div>
                    break;
                default:
                    <div class="row">
                        <div class="col-md-4">
                            <h5>
                                <a asp-page="./Run"
                                    asp-route-scripttag="@Model.ScriptList.Tabarray[row,0].Link">@Model.ScriptList.Tabarray[row,0].ShowText</a>
                            </h5>
                        </div>
                        <div class="col-md-4">
                            <h5>
                                <a asp-page="./Run"
                                    asp-route-scripttag="@Model.ScriptList.Tabarray[row,1].Link">@Model.ScriptList.Tabarray[row,1].ShowText</a>
                            </h5>
                        </div>
                        <div class="col-md-4">
                            <h5>
                                <a asp-page="./Run"
                                    asp-route-scripttag="@Model.ScriptList.Tabarray[row,2].Link">@Model.ScriptList.Tabarray[row,2].ShowText</a>
                            </h5>
                        </div>
                    </div>
                    break;
            }
        }
    </div>
}
else
{
    <p>Das Skriptverzeichnis @Model.ScriptPath wurde nicht gefunden. Bitte prüfen Sie die Einstellung ScriptPath in
        der Datei appsettings.json.</p>
}
